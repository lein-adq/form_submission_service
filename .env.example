# Database Configuration
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=formcore
DATABASE_HOST=formcore-db
DATABASE_PORT=5432

# Database URL (constructed from above, or set directly)
DATABASE_URL=postgresql://postgres:postgres@formcore-db:5432/formcore

# Service Role Database URL (optional, for bypassing RLS)
# DATABASE_SERVICE_URL=postgresql://postgres:postgres@formcore-db:5432/formcore

# JWT Configuration
JWT_SECRET_KEY=changethis
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (JSON format for lists)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Environment
ENVIRONMENT=development
DEBUG=false

# Database Echo (for SQL logging)
DATABASE_ECHO=false

# Backend Port (for docker-compose)
BACKEND_PORT=8000
